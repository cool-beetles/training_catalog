%div
  = form_for @training do |f|
    = f.label :title
    = f.text_field :title
  %div
    = f.label :set
    = f.number_field :set
  %div
    = f.label :repetition
    = f.number_field :repetition
  %h3 Exercises
  #exercises
    = f.collection_select(:exercise_id, Exercise.all, :id, :title) do |exercise|
      = render 'exercise_fields', f, :exercises
      = link_to_add_association 'add exercise', f
  = f.submit